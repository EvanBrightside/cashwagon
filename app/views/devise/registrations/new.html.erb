<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4" style="padding: 0px 3.8%;">
      <h2 class="text-center">Registration</h2>

      <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br>
            <%= f.text_field :email, autofocus: true,
                             class: 'form-control', placeholder: "Your email here", requred: true, size: 35 %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br>
            <%= f.password_field :password, autocomplete: "off",
                              class: 'form-control', placeholder: 'Your password here', requred: true, size: 35 %>
          </div>

          <%= f.submit "Sign up", class: 'btn btn-success btn-block' %><br>
        <% end %>

        <%= render "devise/shared/fb" %>
      </div>
    </div>
  </div>
</div>
