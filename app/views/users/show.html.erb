<div class="container">
  <div class="col-md-8">
    <%= form_for(@user) do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, 'Name', class: 'col-sm-2 col-form-label'  %>
        <div class="col-sm-10">
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, 'Surname', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :last_name, class: 'form-control'  %>
        </div>
      </div>

      <%= f.submit 'Save', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
